{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,  // Asegura que se reconozcan las variables globales del navegador
    "node": true
  },
  "rules": {
    "react/prop-types": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "max-len": ["off"],
    "jsx-a11y/label-has-associated-control": ["off"],
    "react/button-has-type": ["off"],
    "no-multi-spaces": ["off"],
    "react/jsx-props-no-multi-spaces": ["off"],  // Permite JSX en .js
    "import/no-extraneous-dependencies": [
      "error", 
      {
        "devDependencies": ["**/setupTests.js", "**/*.test.js"] // Permitir en archivos de test
      }
    ]
  }
}
